@using LeadersCorner.Common
@using LeadersCorner.Data.Models
@model LeadersCorner.Web.ViewModels.Article.CreateArticleFormModel

@{
    this.ViewData["Title"] = "Create an article";
}


<div class="row">
    <div class=" col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Create an article</h2>
        <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
        <script type="text/javascript">
            tinymce.init({
                selector: "textarea",
                relative_urls: false,
                remove_script_host: false,
                convert_urls: true,
                plugins: [
                    "image paste table link code media fullscreen wordcount searchreplace lists"
                ]
            });
        </script>

        <form method="post" class=" row" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title" class="form-label mt-4"></label>
                <input asp-for="Title" class="form-control" placeholder="Title" />
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticleContent" class="form-label mt-4"></label>
                <textarea rows="12" asp-for="ArticleContent" class="form-control" placeholder="Post your article here"></textarea>
                <span asp-validation-for="ArticleContent" class="small text-danger"></span>
            </div>
            <div class="row">
                <form method="get">
                    <div class="row">
                        <div class="form-group col-md-4 mt-4">
                            <div class="form-group">
                                <div class="dropdown">
                                    <label asp-for="CategoryId" class="form-label"></label>
                                    <select asp-for="CategoryId" class="form-control">
                                        <span asp-validation-for="CategoryId" class="small text-danger"></span>
                                        @foreach (var category in Model.Categories)
                                        {

                            <option value="@category.Id">@category.CategoryLabel</option>
                                            <button onclick="@category.Id" class="dropbtn">@category.CategoryLabel</button>
}

                                    </select>

                                </div>

                            </div>
                        </div>
                </form>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="form-label mt-4"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <input type="hidden" name="UserId" value="@Model.AuthorId" />
            <input class="btn btn-primary mt-4" type="submit" value="Save" />
        </form>
    </div>
</div>
