@using LeadersCorner.Common
@model LeadersCorner.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Leaders Corner</h1>
    <p>Here you can find everything you want to know to be a good leader.</p>
    <p> We have more than </p>
    <ul class>
        <li class="list-group">Articles: @Model.ArticlesCout</li>
        <li class="list-group">Courses: @Model.CourseCount</li>
    </ul>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @for (int i = 0; i < Model.Articles.Count; i++)
            {
                var article = Model.Articles[i];
                <div class="carousel-item">
                    <img class="d-block w-100" src="@article.ImageUrl">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="card-title text-center"><b>@article.Title</b></h5>
                        <img class="card-img-top" src="@article.ImageUrl" alt="@article.Title">
                        <div>
                            <a asp-controller="Article"
                               asp-action="Details"
                               asp-route-id="@article.Id"></a>
                        </div>
                    </div>
                </div class="carousel-item">

            }
            

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    

    <div class="mb-5"></div>

    <div class="row">
        <div class="col-12 text-center">
            <button class="btn btn-primary" id="statistics-button">View more</button>
        </div>
    </div>

    <div class="jumbotron d-none" id="statistics">
        <div class="row">
            <h2 class="col-md-4 text-center" id="total-article"></h2>
           
        </div>
    </div>


    

    <p> Thank you for choosing us! </p>


